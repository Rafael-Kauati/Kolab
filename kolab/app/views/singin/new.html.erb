<h1>Sign Up</h1>
<%= form_tag new_singin_path, method: :post do %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email, autofocus: true %>
  </div>

  <div class.field>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="field">
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign Up", class: "btn" %>
  </div>
<% end %>
